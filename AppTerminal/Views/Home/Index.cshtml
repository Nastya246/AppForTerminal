@{
    ViewBag.Title = "Главная";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>

<div><img src="~/Content/готовое для  инфоматов/head.png" style="width:100%; height:7%" /></div>

<div id="action">
    <input type="image" id="contact" src="~/Content/готовое для  инфоматов/contact.png" style="width:35%; height:15%; position:absolute; top:50%; left:10%">
    <input type="image" id="docs" src="~/Content/готовое для  инфоматов/docs.png" style="width:35%; height:15%; position:absolute; top:50%; right:10%">
    <input type="image" id="forUsers" src="~/Content/готовое для  инфоматов/users.png" style="width:35%; height:15%; position:absolute; top:69%; left:10%">
    <input type="image" id="control" src="~/Content/готовое для  инфоматов/controls.png" style="width:35%; height:15%; position:absolute; top:69%; right:10%">
</div>

<div id="file" class="file">

</div>

<div id="actionStandart">
    <input type="image" src="~/Content/готовое для  инфоматов/left.png" style="width:26%; height:12%; position:absolute; top:88%; left:8%">
    <input type="image" src="~/Content/готовое для  инфоматов/center.png" style="width:26%; height:12%; position:absolute; top:88%; left:37%">
    <input type="image" src="~/Content/готовое для  инфоматов/right.png" style="width:26%; height:12%; position:absolute; top:88%; right:8%">
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
            var id=""
                    $(function () {
                        $('#docs').click(function () {
                            id='docs'
                        });
                        $('#contact').click(function () {
                            id = 'contact'
                        });
                        $('#forUsers').click(function () {
                            id = 'forUsers'
                        });
                        $('#control').click(function () {
                            id = 'control'
                        });

        })
            $(function () {
                $('#action').click(function () {
                    document.getElementById('contact').style.display = "none";
                    document.getElementById('docs').style.display = "none";
                    document.getElementById('forUsers').style.display = "none";
                    document.getElementById('control').style.display = "none";
                             $.ajax({
                type: 'GET',
                url: '@Url.Action("GetFile")/' + id,
                 success: function (data) {

                 $("div.file").replaceWith(data);

                }
            });
                });

            })

               $(function () {
                   $('#actionStandart').click(function () {
                    document.getElementById('contact').style.display = "block";
                    document.getElementById('docs').style.display = "block";
                    document.getElementById('forUsers').style.display = "block";
                       document.getElementById('control').style.display = "block";
                       document.getElementById('file').innerHTML='';
                });

            })
    </script>

}
